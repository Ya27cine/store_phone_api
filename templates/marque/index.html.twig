{% extends 'base.html.twig' %}

{% block title %}Marque index
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row my-4">
			<div class="col-md-8">
				<h1>Marque index</h1>

			</div>
			<div class="col-md-4">
				<a class="btn btn-block btn-primary" href="{{ path('marque_new') }}">Create new</a>

			</div>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for marque in marques %}
					<tr>
						<td>{{ marque.id }}</td>
						<td>{{ marque.name }}</td>
						<td>{{ marque.description }}</td>
						<td>
							<a href="{{ path('marque_show', {'id': marque.id}) }}">show</a>
							<a href="{{ path('marque_edit', {'id': marque.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
